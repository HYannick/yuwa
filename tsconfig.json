{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "types": ["vitest/globals"],
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@cypress/*": ["./cypress/*"],
      "@unit/*": ["./unit/*"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "node_modules/.pnpm/vitest@2.1.1_terser@5.33.0/node_modules/vitest/globals.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
